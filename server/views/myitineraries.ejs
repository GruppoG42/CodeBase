<%- include('partials/header') -%>

<h1>My Itineraries</h1>

<% if (itineraries.length === 0) { %>
    <p>No itineraries found.</p>
<% } else { %>
    <ul>
        <% itineraries.forEach(itinerary => { %>
            <li>
                <strong><%= itinerary.nome %></strong> - <%= itinerary.descrizione %>
            </li>
        <% }); %>
    </ul>
<% } %>

<p class="py-3">
    <a class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" href="/createItinerary">Create Itinerary</a>
</p>

<%- include('partials/footer') -%>